### Makefile for the SRT_divider project
### Generated by Bluespec Workstation on Sat May 13 09:22:49 IST 2017

default: compile link simulate

.PHONY: compile
compile:
	@echo Compiling...
	bsc -u -sim -simdir . -bdir . -info-dir . -keep-fires -p %/Prelude:%/Libraries:%/Libraries/BlueNoC -g mkTb_for_integer_divider_riscv  Tb_integer_divider_riscv.bsv 
	@echo Compilation finished

.PHONY: link
link:
	@echo Linking...
	bsc -e mkTb_for_integer_divider_riscv -sim -o ./out -simdir . -p %/Prelude:%/Libraries:%/Libraries/BlueNoC -bdir . -keep-fires 
	@echo Linking finished

.PHONY: simulate
simulate:
	@echo Simulation...
	./out 
	@echo Simulation finished

.PHONY: clean
clean:
	exec rm -f ./riscv_types.bo ./divider.bo ./lead_zero_detect64.bo
	exec rm -f ./mkdivider.ba
	exec rm -f ./mkdivider.o ./model_mkdivider.o

.PHONY: full_clean
full_clean:
	rm -f ./riscv_types.bo ./divider.bo ./lead_zero_detect64.bo
	rm -f ./mkdivider.ba
	rm -f ./mkdivider.o ./model_mkdivider.o
	rm -f ./model_mkdivider.h ./mkdivider.h
	rm -f ./mkdivider.cxx ./model_mkdivider.cxx
